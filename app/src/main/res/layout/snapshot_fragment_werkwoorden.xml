<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".snapshotFragmentWerkwoorden">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/header_snapshot"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:elevation="2dp"
                android:gravity="center|fill_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="Werkwoorden"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/showWerkwoordInstellingen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_setting_white_logo_scale"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.7"
                    android:background="#8FC8A6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="2.7"
                        android:autoSizeMinTextSize="16dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="niveau 1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#BCDECA"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="3"
                        android:autoSizeMinTextSize="16dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="niveau 2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#E9F4ED"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="3"
                        android:autoSizeMinTextSize="16dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="niveau 3" />
                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/niveau1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.7"
                    android:background="#8FC8A6"
                    android:orientation="vertical"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/wachten"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/wachten_logo_scale"
                        android:onClick="buttonOnClick"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="25dp"
                        android:text="@string/wachten"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bewegen"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/bewegen_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="25dp"
                        android:text="@string/bewegen"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/transporteren"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/transporteren_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="25dp"
                        android:text="@string/transporteren"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/overleggen"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/overleggen_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="25dp"
                        android:text="Overleggen"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/lezen"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/lezen_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="15dp"
                        android:text="Lezen"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/zoeken"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/zoeken_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="25dp"
                        android:text="@string/zoeken"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/produceren"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/productie_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="17dp"
                        android:text="@string/produceren"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/demonteren"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/demonteren_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="17dp"
                        android:text="@string/demonteren"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/omstellen"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/omstellen_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="17dp"
                        android:text="@string/omstellen"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/administreren"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/administreren_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="17dp"
                        android:text="@string/administreren"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/opruimen"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/opruimen_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="17dp"
                        android:text="@string/opruimen"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/herstellen"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#858584"
                        android:drawableTop="@drawable/herstellen_logo_scale"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:paddingBottom="17dp"
                        android:text="@string/herstellen"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#BCDECA"
                    android:orientation="vertical"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#b0b0b0"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:text="@string/wachten"
                        android:textColor="#FFFFFF"
                        tools:ignore="TextContrastCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#E9F4ED"
                    android:orientation="vertical"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/wachten2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_button_werkwoorden"
                        android:backgroundTint="#b0b0b0"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:outlineSpotShadowColor="#00FFFFFF"
                        android:text="@string/wachten"
                        android:textColor="#FFFFFF"
                        tools:ignore="TextContrastCheck" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>