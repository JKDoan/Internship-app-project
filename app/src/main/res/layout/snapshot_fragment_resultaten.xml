<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".ResultatenFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/metingInstellen"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center|end"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/roboto"
                android:text="Resultaten"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                tools:ignore="TextContrastCheck"
                tools:layout_marginHorizontal="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_rectangle_results"
                android:gravity="clip_horizontal|fill_horizontal|center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/left_logo_scale" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/snapshotResultsButton"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/box_shadow"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/logo_snapshot"
                        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

                    <TextView
                        android:id="@+id/snapshotTextResults"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:autoSizeMaxTextSize="10dp"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeTextType="uniform"
                        android:text="@string/snapshot"
                        android:textAlignment="center"
                        android:textColor="#20914E" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/gaugeResultsButton"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/box_shadow"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/logo_gauge_grey"
                        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

                    <TextView
                        android:id="@+id/gaugeTextResults"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:autoSizeMaxTextSize="10dp"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeTextType="uniform"
                        android:text="@string/gauge"
                        android:textAlignment="center"
                        android:textColor="#20914E"
                        android:visibility="invisible"
                        tools:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/timingResultsButton"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/box_shadow"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/logo_timing_grey"
                        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

                    <TextView
                        android:id="@+id/timingTextResults"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:autoSizeMaxTextSize="10dp"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeTextType="uniform"
                        android:text="@string/timing"
                        android:textAlignment="center"
                        android:textColor="#20914E"
                        android:visibility="invisible"
                        tools:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/disturbanceResultsButton"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/box_shadow"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/logo_disturbance_grey"
                        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

                    <TextView
                        android:id="@+id/disturbanceTextResults"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:autoSizeMaxTextSize="10dp"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeTextType="uniform"
                        android:text="@string/disturbance"
                        android:textAlignment="center"
                        android:textColor="#20914E"
                        android:visibility="invisible"
                        tools:visibility="invisible" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/right_logo_scale" />

            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                android:src="@drawable/download_logo_scale"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragementResultaten"
            android:name="com.example.insight.resultatenFragmentSnapshot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_resultaten_snapshot" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>