<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk_insight"
    tools:context=".ActivityAccount">

    <ImageButton
        android:id="@+id/backToHomescreenButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/circle_button_white_grey_border"
        android:src="@drawable/left_logo_scale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="13dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="25dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Account"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:autoSizeMaxTextSize="23dp"
            android:autoSizeMinTextSize="19dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="jennykimdoan@gmail.com"
            android:textAlignment="center" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="3dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vak_template"
                android:gravity="center"
                android:text="Jenny" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="3dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vak_template"
                android:gravity="center"
                android:text="Doan" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="3dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vak_template"
                android:gravity="center"
                android:text="LearningWaves"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="3dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vak_template"
                android:gravity="center"
                android:text="Stagair"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wachtwoordWijzigen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="3dp"
            android:autoSizeMaxTextSize="20dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/vak_template"
            android:backgroundTint="#FFFFFF"
            android:stateListAnimator="@null"
            android:text="wachtwoord wijzigen"
            android:textAllCaps="false"
            android:textColor="#20914E" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uitloggenButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="13dp"
        android:autoSizeMaxTextSize="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/vak_template"
        android:backgroundTint="#FFFFFF"
        android:stateListAnimator="@null"
        android:text="Uitloggen"
        android:textColor="#20914E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>