<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectTemplate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B31D1D1B"
    tools:context=".snapshotFragmentTemplateSelecteren">

    <LinearLayout
        android:id="@+id/templateSelecteren"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <View
            android:id="@+id/viewOnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="27" />

        <LinearLayout
            android:layout_width="261dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#8FC8A6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginVertical="10dp"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="Selecteer template"
                    android:textAlignment="center" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/leeg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="5dp"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/vak_template"
                    android:backgroundTint="#209f60"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:text="LEEG"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    tools:cornerRadius="5dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/voorbeeldTim"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="5dp"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/vak_template"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:text="Voorbeeld Tim"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#868686"
                    tools:cornerRadius="5dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/proVRR"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="5dp"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/vak_template"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:minHeight="0dp"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:text="Productie VRR"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#868686"
                    tools:cornerRadius="5dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/proMartens"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="5dp"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/vak_template"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:text="Productie Martens"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#868686"
                    tools:cornerRadius="5dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/hideToolbarButtonSelecteren"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:background="@drawable/circle_button_werkwoorden"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/right_logo_scale"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>