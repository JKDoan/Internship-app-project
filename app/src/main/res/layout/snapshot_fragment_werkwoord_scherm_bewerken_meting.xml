<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B31D1D1B"
    tools:context=".snapshotFragmentWerkwoordSchermBewerkenMeting">

    <LinearLayout
        android:id="@+id/omgevingSelecteren"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <View
            android:id="@+id/viewOnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="27" />

        <LinearLayout
            android:layout_width="261dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#8FC8A6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginVertical="10dp"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="Instellingen werkwoorden"
                    android:textAlignment="center" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/werkwoordNiveau1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="5dp"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/vak_template"
                    android:drawableRight="@drawable/right_logo_scale"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:text="Werkwoorden niveau 1"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#868686"
                    tools:cornerRadius="5dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/hoofdschermInstellen"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="5dp"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/vak_template"
                    android:drawableRight="@drawable/right_logo_scale"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:text="Hoofscherm instellen"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#868686"
                    tools:cornerRadius="5dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/closeWerkwoordInstellingen"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:background="@drawable/circle_button_werkwoorden"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/right_logo_scale"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>